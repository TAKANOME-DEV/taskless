{
  "private": true,
  "name": "@taskless/root",
  "version": "2.0.0-next.11",
  "scripts": {
    "// util": "echo '----- Global Workspace Helpers -----'",
    "lint": "eslint .",
    "build": "yarn workspaces foreach -pitv --no-private run build",
    "husky": "husky",
    "prettier": "prettier",
    "postinstall": "husky install",
    "// ittr": "echo '----- Itteration Commands for development -----'",
    "dev": "run-p 'dev:**'",
    "dev:client": "yarn workspace @taskless/client dev",
    "dev:dev": "yarn workspace @taskless/dev dev",
    "dev:next": "yarn workspace taskless-example-next dev:next",
    "// release": "echo '----- Release Commands -----'",
    "preview": "run-s preview:clean build preview:pack",
    "preview:clean": "shx rm -rf dist",
    "preview:pack": "yarn workspaces foreach -pitv --no-private pack --out ../../archive/%s-%v.tgz",
    "rev": "release-it --preRelease",
    "rel": "release-it"
  },
  "packageManager": "yarn@3.2.0",
  "workspaces": [
    "examples/*",
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.3",
    "madge": "^5.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "release-it": "*",
    "release-it-yarn-workspaces": "^2.0.1",
    "shx": "^0.3.4",
    "typescript": "*"
  },
  "resolutions": {
    "@taskless/client": "workspace:*",
    "@taskless/dev": "workspace:*",
    "@taskless/express": "workspace:*",
    "@taskless/next": "workspace:*",
    "@taskless/types": "workspace:*",
    "@types/react": "^17.0.40",
    "eslint-plugin-tsc": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "tslib": "^2.4.0",
    "typescript": "^4.6.4"
  },
  "release-it": {
    "plugins": {
      "release-it-yarn-workspaces": true
    },
    "npm": false,
    "git": {
      "commitMessage": "chore: Releases version v${version}"
    },
    "hooks": {
      "before:init": [
        "yarn workspaces foreach -pitv --no-private run release:before:init"
      ]
    }
  },
  "volta": {
    "node": "14.19.0"
  }
}
