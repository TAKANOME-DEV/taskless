{
  "private": true,
  "name": "@taskless/root",
  "version": "1.0.0-next.15",
  "scripts": {
    "// util": "echo '----- Global Workspace Helpers -----'",
    "lint-all": "yarn workspaces foreach run lint .",
    "husky": "husky",
    "postinstall": "husky install",
    "// release": "echo '----- Release Commands -----'",
    "rev": "release-it --preRelease",
    "release-it": "release-it"
  },
  "packageManager": "yarn@3.2.0",
  "workspaces": [
    "examples/*",
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/eslint-parser": "^7.16.5",
    "@babel/eslint-plugin": "^7.16.5",
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@types/sqlite3": "^3.1.8",
    "eslint": "^8.10.0",
    "eslint-visitor-keys": "^3.1.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.3",
    "prettier": "^2.5.1",
    "release-it": "*",
    "release-it-yarn-workspaces": "^2.0.1",
    "typescript": "4.5.5"
  },
  "resolutions": {
    "@taskless/client": "workspace:*",
    "@taskless/dev": "workspace:*",
    "typescript": "4.5.5"
  },
  "release-it": {
    "plugins": {
      "release-it-yarn-workspaces": true
    },
    "npm": false,
    "git": {
      "commitMessage": "chore: Releases version v${version}"
    },
    "hooks": {
      "before:init": [
        "yarn release:before:init || true"
      ]
    }
  },
  "volta": {
    "node": "14.19.0"
  }
}
