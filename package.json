{
  "private": true,
  "name": "@taskless/root",
  "version": "3.0.0-next.0",
  "repository": "taskless/taskless.git",
  "scripts": {
    "build": "run-s codegen build:all",
    "build:all": "yarn workspaces foreach -pitv --no-private run build",
    "codegen": "graphql-codegen",
    "dev": "echo 'You must specify a stack to develop on such as dev:next'",
    "dev:express": "run-p -l 'dev:pkg:**' 'dev:x:express'",
    "dev:next": "run-p -l 'dev:pkg:**' 'dev:x:next'",
    "dev:pkg:client": "yarn workspace @taskless/client dev",
    "dev:pkg:dev": "yarn workspace @taskless/dev dev",
    "dev:pkg:express": "yarn workspace @taskless/express dev",
    "dev:pkg:graphinql": "yarn workspace @taskless/graphinql dev",
    "dev:pkg:next": "yarn workspace @taskless/next dev",
    "dev:pkg:types": "yarn workspace @taskless/types dev",
    "dev:pkg:ui": "yarn workspace @taskless/ui dev",
    "dev:x:express": "yarn workspace taskless-example-express dev:apponly",
    "dev:x:next": "yarn workspace taskless-example-next dev:apponly",
    "husky": "husky",
    "lint": "eslint .",
    "lint-staged": "lint-staged",
    "postinstall": "husky install",
    "prettier": "prettier",
    "preview": "run-s preview:clean build preview:pack",
    "preview:clean": "shx rm -rf dist",
    "preview:pack": "yarn workspaces foreach -pitv --no-private pack --out ../../archive/%s-%v.tgz",
    "rel": "release-it",
    "rev": "release-it --preRelease",
    "syncpack": "syncpack",
    "test": "FORCE_COLOR=1 yarn workspaces foreach -ptv --no-private run test"
  },
  "workspaces": [
    "examples/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=14.19.0"
  },
  "packageManager": "yarn@3.2.0",
  "dependencies": {
    "tslib": "^2.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@graphql-codegen/cli": "^2.9.1",
    "@graphql-codegen/introspection": "^2.2.0",
    "@graphql-codegen/time": "^3.2.0",
    "@graphql-codegen/typescript": "^2.7.2",
    "@graphql-codegen/typescript-generic-sdk": "^2.4.2",
    "@graphql-codegen/typescript-operations": "^2.5.2",
    "@release-it-plugins/workspaces": "^3.1.0",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "graphql": "^16.5.0",
    "graphql-tag": "^2.12.6",
    "husky": "^7.0.4",
    "lint-staged": "12.1.7",
    "madge": "^5.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.0",
    "release-it": "*",
    "shx": "^0.3.4",
    "syncpack": "^7.2.1"
  },
  "resolutions": {
    "@types/eslint": "*",
    "@types/node": "^17.0.41",
    "@types/react": "^17.0.40",
    "docmq": "^0.1.6",
    "graphql": "^16.5.0",
    "graphql-tag": "^2.12.6",
    "luxon": "2.4.0",
    "npm-run-all": "^4.1.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "tslib": "^2.4.0",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3"
  },
  "type": "module",
  "volta": {
    "node": "14.19.0"
  }
}
