{
  "name": "taskless",
  "version": "0.1.0",
  "description": "Client for Taskless.io",
  "author": {
    "name": "Taskless.io",
    "email": "oss@taskless.io",
    "url": "https://taskless.io"
  },
  "repository": "taskless/taskless",
  "license": "MIT",
  "files": [
    "dist",
    "*.d.ts",
    "*.cjs",
    "*.js",
    "*.mjs",
    "!jest.config.js",
    "README.md"
  ],
  "main": "dist/cjs/src/index.js",
  "module": "dist/esm/src/index.js",
  "engines": {
    "node": "12 || 14 || 15 || 16 || 17"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "zregen-schema": "zeus src/__generated__/schema.graphql src/__generated__",
    "codegen": "graphql-codegen",
    "build": "run-s build:tsc:esm build:tsc:cjs",
    "build:tsc:esm": "tsc --module es2015 --outDir dist/esm",
    "build:tsc:cjs": "tsc --outDir dist/cjs",
    "prepack": "run-s build"
  },
  "dependencies": {
    "deepmerge": "^4.2.2",
    "graphql-zeus": "^4.0.4",
    "p-retry": "^5.0.0",
    "phin": "^3.6.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.6.2",
    "@graphql-codegen/introspection": "^2.1.1",
    "@graphql-codegen/time": "^3.1.1",
    "@graphql-codegen/typescript": "^2.4.5",
    "@graphql-codegen/typescript-generic-sdk": "^2.3.4",
    "@graphql-codegen/typescript-operations": "^2.3.2",
    "@types/deepmerge": "^2.2.0",
    "@types/uuid": "^8",
    "next": "^12.1.0",
    "npm-run-all": "^4.1.5",
    "tsdef": "^0.0.14",
    "typescript": "^4.5.5"
  },
  "peerDependencies": {
    "next": "^10.0.8 || ^11.0 || ^12.0"
  },
  "peerDependenciesMeta": {
    "next": {
      "optional": true
    }
  }
}
