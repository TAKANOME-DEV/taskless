{
  "name": "@taskless/client",
  "description": "Core JavaScript client for Taskless.io",
  "version": "2.0.0-next.4",
  "author": {
    "name": "Taskless.io",
    "email": "oss@taskless.io",
    "url": "https://taskless.io"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/taskless/taskless.git",
    "directory": "packages/client"
  },
  "homepage": "https://github.com/taskless/taskless/",
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "engines": {
    "node": "14 || 15 || 16 || 17"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "run-s watch",
    "clean": "shx rm -rf dist",
    "test": "echo \"Error: no test specified\" && exit 0",
    "// build": "echo '----- Build Commands --------------------------------'",
    "build": "run-s clean 'build:pre' 'build:all' 'build:post'",
    "build:all": "run-p 'build:x:**'",
    "build:x:esm": "tsc -p tsconfig.esm.json",
    "build:x:cjs": "tsc -p tsconfig.cjs.json",
    "build:x:types": "tsc -p tsconfig.types.json",
    "// watch": "echo '----- Watch Commands --------------------------------'",
    "watch": "run-p 'watch:**'",
    "watch:esm": "tsc -p tsconfig.esm.json -w --preserveWatchOutput",
    "watch:cjs": "tsc -p tsconfig.cjs.json -w --preserveWatchOutput",
    "watch:types": "tsc -p tsconfig.types.json -w --preserveWatchOutput",
    "// hooks": "echo '----- Monorepo Hooks --------------------------------'",
    "release:before:init": "run-s clean build test",
    "build:pre": "run-s graphql-codegen",
    "build:post": "echo 'no pkg:build:post tasks for @taskless/client'",
    "watch:codegen": "graphql-codegen --watch"
  },
  "dependencies": {
    "deepmerge": "^4.2.2",
    "luxon": "^2.3.1",
    "p-retry": "^5.0.0",
    "phin": "^3.6.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.6.2",
    "@graphql-codegen/introspection": "^2.1.1",
    "@graphql-codegen/time": "^3.1.1",
    "@graphql-codegen/typescript": "^2.4.5",
    "@graphql-codegen/typescript-generic-sdk": "^2.3.4",
    "@graphql-codegen/typescript-operations": "^2.3.2",
    "@taskless/types": "workspace:*",
    "graphql": "^16.5.0",
    "graphql-tag": "^2.12.6",
    "npm-run-all": "^4.1.5",
    "shx": "^0.3.4",
    "typescript": "*"
  }
}
