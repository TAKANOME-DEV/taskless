{
  "name": "@taskless/express",
  "description": "Express JS Integration for Taskless.io",
  "version": "2.0.0-next.5",
  "author": {
    "name": "Taskless.io",
    "email": "oss@taskless.io",
    "url": "https://taskless.io"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/taskless/taskless.git",
    "directory": "packages/express"
  },
  "homepage": "https://github.com/taskless/taskless/",
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "package.json",
    "README.md",
    "dist"
  ],
  "engines": {
    "node": "14 || 15 || 16 || 17"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "run-s watch",
    "clean": "shx rm -rf dist",
    "test": "echo \"Error: no test specified\" && exit 0",
    "// build": "echo '----- Build Commands --------------------------------'",
    "build": "run-s 'build:pre' 'build:all' 'pjson:all' 'build:post'",
    "build:pre": "run-s clean 'pkg:build:pre'",
    "build:all": "run-p 'build:x:**'",
    "build:post": "run-s 'pkg:build:post'",
    "build:x:esm": "tsc -p tsconfig.esm.json",
    "build:x:cjs": "tsc -p tsconfig.cjs.json",
    "build:x:types": "tsc -p tsconfig.types.json",
    "pjson:all": "run-p 'pjson:x:**'",
    "pjson:x:cjs": "shx echo '{\"type\": \"commonjs\"}' > ./dist/cjs/package.json",
    "pjson:x:esm": "shx echo '{\"type\": \"module\"}' > ./dist/esm/package.json",
    "// watch": "echo '----- Watch Commands --------------------------------'",
    "watch": "run-p 'watch:**' 'pkg:watch:**",
    "watch:esm": "tsc -p tsconfig.esm.json -w --preserveWatchOutput",
    "watch:cjs": "tsc -p tsconfig.cjs.json -w --preserveWatchOutput",
    "watch:types": "tsc -p tsconfig.types.json -w --preserveWatchOutput",
    "// utilities": "echo '----- Utility Commands --------------------------",
    "eslint": "eslint",
    "madge": "madge",
    "prettier": "prettier",
    "// hooks": "echo '----- Monorepo Hooks --------------------------------'",
    "release:before:init": "run-s clean build test",
    "pkg:build:pre": "echo 'no pkg:build:pre tasks for @taskless/express'",
    "pkg:build:post": "echo 'no pkg:build:post tasks for @taskless/express'"
  },
  "bundledDependencies": [
    "@taskless/client",
    "@taskless/types"
  ],
  "dependencies": {
    "@taskless/client": "2.0.0-next.5",
    "@taskless/types": "2.0.0-next.5"
  },
  "devDependencies": {
    "@types/eslint": "*",
    "@types/express": "^4.17.13",
    "@types/prettier": "*",
    "@typescript-eslint/eslint-plugin": "*",
    "@typescript-eslint/parser": "*",
    "eslint": "*",
    "madge": "^5.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "*",
    "shx": "^0.3.4",
    "typescript": "*"
  },
  "peerDependencies": {
    "express": ">= 4.16.0"
  },
  "peerDependenciesMeta": {
    "express": {
      "optional": true
    }
  }
}
