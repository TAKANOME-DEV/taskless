{
  "name": "@taskless/types",
  "description": "Common type definitions for Taskless.io",
  "version": "2.0.0-next.4",
  "author": {
    "name": "Taskless.io",
    "email": "oss@taskless.io",
    "url": "https://taskless.io"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/taskless/taskless.git",
    "directory": "packages/taskless"
  },
  "homepage": "https://github.com/taskless/taskless/",
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "engines": {
    "node": "14 || 15 || 16 || 17"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "run-s watch",
    "clean": "shx rm -rf dist",
    "test": "echo \"Error: no test specified\" && exit 0",
    "// build": "echo '----- Build Commands --------------------------------'",
    "build": "run-s 'build:pre' 'build:all' 'build:post'",
    "build:pre": "run-s clean 'pkg:build:pre'",
    "build:all": "run-p 'build:x:**'",
    "build:post": "run-s 'pkg:build:post'",
    "build:x:esm": "tsc --build tsconfig.esm.json",
    "build:x:cjs": "tsc --build tsconfig.cjs.json",
    "build:x:types": "tsc --build tsconfig.types.json",
    "// watch": "echo '----- Watch Commands --------------------------------'",
    "watch": "run-p 'watch:**' 'pkg:watch:**",
    "watch:esm": "tsc -p tsconfig.esm.json -w --preserveWatchOutput",
    "watch:cjs": "tsc -p tsconfig.cjs.json -w --preserveWatchOutput",
    "watch:types": "tsc -p tsconfig.types.json -w --preserveWatchOutput",
    "// utilities": "echo '----- Utility Commands --------------------------",
    "eslint": "eslint",
    "madge": "madge",
    "prettier": "prettier",
    "// hooks": "echo '----- Monorepo Hooks --------------------------------'",
    "lint-staged": "run-s lint-staged:*",
    "lint-staged:eslint": "eslint --fix --plugin tsc --rule 'tsc/config: [2, {configFile: \"./tsconfig.json\"}]'",
    "lint-staged:circular": "madge --circular src/index.ts # see https://github.com/pahen/madge/issues/306",
    "lint-staged:prettier": "prettier --write \"{src,test,scripts}/**/*.ts\"",
    "release:before:init": "run-s clean build test",
    "// additional": "echo '----- Custom Commands ----------------------'",
    "pkg:build:pre": "echo 'no pkg:build:pre tasks for @taskless/types'",
    "pkg:build:post": "echo 'no pkg:build:post tasks for @taskless/types'"
  },
  "dependencies": {
    "generic-type-guard": "^3.7.0"
  },
  "devDependencies": {
    "@types/eslint": "^8",
    "@types/prettier": "^2",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "eslint": "^8.10.0",
    "eslint-plugin-tsc": "^2.0.0",
    "madge": "^5.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.0",
    "shx": "^0.3.4",
    "typescript": "*"
  }
}
